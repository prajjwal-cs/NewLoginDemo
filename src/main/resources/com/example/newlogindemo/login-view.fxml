<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" minHeight="350.0" minWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.newlogindemo.controller.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="titleLabel" alignment="CENTER" text="Student Login">
        <font>
            <Font name="System Bold" size="24.0" />
        </font></Label>
    <HBox alignment="CENTER" prefHeight="58.0" prefWidth="360.0">
        <children>
            <Label fx:id="usernameLabel" alignment="CENTER" text="Username">
                <font>
                    <Font size="14.0" />
                </font>
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </Label>
            <TextField fx:id="usernameTextField" alignment="CENTER" />
        </children>
    </HBox>
    <HBox alignment="CENTER" prefHeight="60.0" prefWidth="397.0">
        <children>
            <Label fx:id="passwordLabel" alignment="CENTER" contentDisplay="CENTER" text="Password" textAlignment="CENTER">
                <HBox.margin>
                    <Insets right="20.0" />
                </HBox.margin>
            </Label>
            <PasswordField fx:id="passwordTextField" alignment="CENTER" prefHeight="25.0" prefWidth="153.0" />
        </children>
    </HBox>
    <Button fx:id="loginButton" onAction="#onLoginButtonClick" prefHeight="31.0" prefWidth="65.0" text="Login">
      <VBox.margin>
         <Insets left="10.0" />
      </VBox.margin></Button>
   <HBox alignment="CENTER" prefHeight="41.0" prefWidth="397.0">
      <children>
         <Label text="Click to register" textFill="#0400fc">
            <font>
               <Font size="13.0" />
            </font>
         </Label>
         <Button fx:id="clickRegisterButton" mnemonicParsing="false" onAction="#onRegisterButtonClick" text="Register">
            <HBox.margin>
               <Insets left="10.0" right="80.0" />
            </HBox.margin>
         </Button>
      </children>
   </HBox>
</VBox>
